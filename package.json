{
  "name": "crypto-snipper",
  "version": "1.0.0",
  "description": "CLI tool for crypto price prediction on Indodax using ARIMAX models",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "crypto-snipper": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "clean": "rm -rf dist/",
    "db:migrate": "tsx src/index.ts db:migrate",
    "db:reset": "tsx src/index.ts db:reset"
  },
  "keywords": [
    "crypto",
    "trading",
    "prediction",
    "arimax",
    "indodax",
    "ccxt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "asciichart": "^1.5.25",
    "better-sqlite3": "^11.7.0",
    "ccxt": "^4.4.49",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "dotenv": "^16.4.7",
    "ora": "^8.1.1",
    "simple-statistics": "^7.8.7",
    "synaptic": "^1.1.4",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.18.1",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
